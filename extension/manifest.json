{
  "manifest_version": 3,
  "name": "Pickachu",
  "version": "1.0",
  "description": "A lightweight picker toolbox to collect colors, elements, links, fonts, images, text and selectors from any webpage.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "modules/*.js",
        "content/*.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "default_locale": "en",
  "commands": {
    "activate-color-picker": {
      "suggested_key": { "default": "Ctrl+Shift+C" },
      "description": "Activate Color Picker"
    },
    "activate-element-picker": {
      "suggested_key": { "default": "Ctrl+Shift+E" },
      "description": "Activate Element Picker"
    },
    "activate-link-picker": {
      "suggested_key": { "default": "Ctrl+Shift+L" },
      "description": "Activate Link Picker"
    },
    "activate-selector-generator": {
      "suggested_key": { "default": "Ctrl+Shift+S" },
      "description": "Activate Selector Generator"
    }
  }
}
